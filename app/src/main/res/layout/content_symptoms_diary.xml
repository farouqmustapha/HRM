<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:text="Date :"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Activity :"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Triggering Activity"
            android:inputType="text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:rowCount="8"
                android:columnCount="2"
                android:numColumns="auto_fit">

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="167dp"
                    android:src="@drawable/upperbody1"
                    android:layout_row="0"
                    android:layout_column="0" />

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="167dp"
                    android:src="@drawable/upperbody2"
                    android:layout_row="0"
                    android:layout_column="1" />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_row="1"
                    android:checked="false"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_row="1"
                    android:checked="false"
                    android:onClick="onRadioButtonClicked"/>

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="167dp"
                    android:src="@drawable/upperbody3"
                    android:layout_row="2"
                    android:layout_column="0" />

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="167dp"
                    android:src="@drawable/upperbody4"
                    android:layout_row="2"
                    android:layout_column="1" />

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_row="3"
                    android:checked="false"
                    android:onClick="onRadioButtonClicked"/>


                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_row="3"
                    android:checked="false"
                    android:onClick="onRadioButtonClicked"/>


                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="167dp"
                    android:src="@drawable/upperbody5"
                    android:layout_row="4"
                    android:layout_column="0" />

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="167dp"
                    android:src="@drawable/upperbody6"
                    android:layout_row="4"
                    android:layout_column="1" />

                <RadioButton
                    android:id="@+id/radio5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_row="5"
                    android:checked="false"
                    android:onClick="onRadioButtonClicked"/>


                <RadioButton
                    android:id="@+id/radio6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_row="5"
                    android:checked="false"
                    android:onClick="onRadioButtonClicked"/>


                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="167dp"
                    android:layout_column="0"
                    android:layout_row="6"
                    android:src="@drawable/upperbody7" />

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="148dp"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_row="6"
                    android:src="@drawable/upperbody8" />

                <RadioButton
                    android:id="@+id/radio7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_row="7"
                    android:checked="false"
                    android:onClick="onRadioButtonClicked"/>


                <RadioButton
                    android:id="@+id/radio8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_row="7"
                    android:checked="false"
                    android:onClick="onRadioButtonClicked"/>


            </GridLayout>
        </RadioGroup>

        <EditText
            android:id="@+id/txtDate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:inputType="date"
            android:focusable="false"
            android:longClickable="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:text="Time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDate" />

        <EditText
            android:id="@+id/txtTime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-3dp"
            android:ems="10"
            android:inputType="time"
            android:focusable="false"
            android:longClickable="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Pain Area :"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:text="Additional Remarks :"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTime" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteY="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>